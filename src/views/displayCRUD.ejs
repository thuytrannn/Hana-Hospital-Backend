<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
</head>
<style>
    table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}

.btn {
    border-width: 0.5px;
    padding: 5px;
    margin: 3px;
    cursor: pointer;
}

.btn-edit {
    background-color: rgb(235, 235, 134);
}

.btn-delete {
    background-color: rgb(230, 80, 80);
}

.a-href {
    text-decoration: none;
}

</style>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                <button class="btn btn-edit" typr="button"><a href="/edit-crud?id=<%=dataTable[i].id %>" class="a-href">Edit</a></button>
                <button class="btn btn-delete" typr="button"><a href="/delete-crud?id=<%=dataTable[i].id %>" class="a-href">Delete</a></button>
              </td>
            </tr>
         <% } %>
      </table>
</body>
</html>
